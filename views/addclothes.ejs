<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('includes/head') %>
    <link rel="stylesheet" href="/styles/addclothes.css" />
  </head>

  <body>
    <%-include('includes/header') %>

    <main>
      <h2>Add Clothes</h2>
      <div id="add-form" class="octagon">
        <form action="/submit-product" method="POST">
          <label for="images"> </label>
          <label for="product-name">*PRODUCT NAME</label>
          <input type="text" id="product-name" name="product_name" required />

          <label for="brand">*BRAND</label>
          <input type="text" id="brand" name="brand" required />

          <label for="category">*CATEGORY</label>
          <select id="category" name="category" required app>
            <option value="Outer">Outer</option>
            <option value="Top">Top</option>
            <option value="Bottom">Bottom</option>
            <option value="Shoes">Shoes</option>
            <option value="Acc">Acc</option>
          </select>

          <label for="price">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            min="0"
            step="1000"
          />

          <label for="sale-price">Sale Price</label>
          <input
            type="number"
            id="sale-price"
            name="sale_price"
            min="0"
            step="1000"
          />

          <label for="site">*SITE</label>
          <input type="text" id="site" name="site" required />

          <button type="submit" class="octagon">ADD</button>
        </form>
      </div>
    </main>

    <%-include('includes/footer') %>
  </body>
</html>
